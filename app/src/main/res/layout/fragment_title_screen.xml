<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TitleScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typostuck"
            android:text="Pocket Egbert"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.225" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usernameInput"
            android:layout_width="321dp"
            android:layout_height="65dp"
            android:fontFamily="@font/typostuck"
            android:hint="Username"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bertHead"
            app:layout_constraintVertical_bias="0.179" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="125dp"
            android:layout_height="61dp"
            android:fontFamily="@font/typostuck"
            android:text="Login"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernameInput"
            app:layout_constraintVertical_bias="0.647" />

        <Spinner
            android:id="@+id/saveSlotSpinner"
            android:layout_width="322dp"
            android:layout_height="50dp"
            android:entries="@array/egberts"
            app:layout_constraintBottom_toTopOf="@+id/loginButton"
            app:layout_constraintEnd_toEndOf="@+id/usernameInput"
            app:layout_constraintStart_toStartOf="@+id/usernameInput"
            app:layout_constraintTop_toBottomOf="@+id/usernameInput" />

        <ImageView
            android:id="@+id/bertHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/johnhead"
            app:layout_constraintEnd_toEndOf="@+id/titleText"
            app:layout_constraintStart_toStartOf="@+id/titleText"
            app:layout_constraintTop_toBottomOf="@+id/titleText" />

        <TextView
            android:id="@+id/timeLineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typostuck"
            android:text="Timeline Selector"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/saveSlotSpinner"
            app:layout_constraintEnd_toEndOf="@+id/usernameInput"
            app:layout_constraintStart_toStartOf="@+id/usernameInput"
            app:layout_constraintTop_toBottomOf="@+id/usernameInput" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>